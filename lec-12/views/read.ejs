<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full">

        <div class="nav mb-5 pl-10 pt-10" >
            <a class="text-blue-500" href="/">Back to Home</a>
        </div>

        <h1 class="w-full text-center text-3xl font-bold">All Users</h1>
        <div class="users flex gap-3 flex-wrap mt-10">
            <div class="user border border-white w-72 p-4 bg-zing-400 rounded-lg">
                <div class="w-full h-52 rounded-lg bg-red-500"></div>
                <h3 class="text-xl mt-3 tracking-tighter" >Devendra Kumar Vishwakarma</h3>
                <h5 class="text-zinc-500">devendra@gmail.com</h5>
                <div class="flex justify-between gap-3 mt-5">
                    <a class="text-zinc-400 hover:text-zinc-600 " href="">Edit User</a>
                    <a class="text-red-600 hover:text-red-800 hover:underline" href="">Delete User</a>
                </div>
            </div>

            <% users.forEach(function(user){ %>
                <div class="user border border-white w-72 p-4 bg-zing-400 rounded-lg">
                    <div class="w-full h-72 rounded-lg bg-red-500 overflow-hidden">
                        <img class="w-full h-full object-cover object-top" src="<%= user.image %>" alt="">
                    </div>
                    <h3 class="text-xl mt-3 tracking-tighter" ><%= user.name %></h3>
                    <h5 class="text-zinc-500"><%= user.email %></h5>
                    <div class="flex justify-between gap-3 mt-5">
                        <a class="text-zinc-400 hover:text-zinc-600 " href="">Edit User</a>
                        <a class="text-red-600 hover:text-red-800 hover:underline" href="/delete/ <%= user._id %>">Delete User</a>
                    </div>
                </div>
            <% }) %>

           
        </div>
    </div>

    
    <script src="../javascripts/script.js"></script>
</body>
</html>