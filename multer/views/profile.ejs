<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>

    <body class="bg-zinc-900 text-white">
        <div class="my-4 mx-5">
            <div class="flex justify-between w-full">
                <div class="w-[80%]">
                    <h1 class="text-3xl">Hello <%= user.name.toUpperCase() %>ðŸ˜˜</h1>
                    <h3>You can create new post</h3>
                    <form action="/post" method="post">
                        <textarea class="w-1/3 resize-none bg-transparent p-3 border-2 border-zinc-800 roundede-md block"  placeholder="What on your mind ?" name="content" id=""></textarea>
                        <input class="px-3 w-40 py-2 bg-blue-500 text-md block rounded-md mt-4 text-white text-center"  type="submit" value="Create Post">
                    </form>
                </div>
                <div class="w-[12%]">
                    <a class="bg-red-500 px-10 py-2 inline-block mb-2 rounded-md" href="/logout">LOGOUT</a>
                </div>
            </div>
            <div class="posts mt-20 text-xl">
                <h2 class="text-zinc-400">Your Posts</h2>
                <div class="postcontainer">
                    <div class="flex flex-wrap">
                        <% user.posts.reverse().forEach((post)=>{ %>
                            <div class="post w-[32%] p-3 mb-4 mr-4 border-2 border-zinc-800">
                                <h3 class="text-2xl pb-2 text-blue-500"><%= post.username %></h3>
                                <p class="text-center text-sm text-zinc-300 tracking-tight"><%= post.content %>
                                </p>
                                <small class="mt-2 inline-block " > <%= post.likes.length %> likes</small>
                                <div class="btns flex gap-5">
                                    <a class="text-blue-500 hover:underline" href="/like/<%= post._id %>">
                                        <%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlikes" %>
                                    </a>
                                    <a class="text-zinc-500 hover:underline" href="/edit/<%= post._id %>">Edit</a>
                                </div>
                            </div>    
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </body>

</html>